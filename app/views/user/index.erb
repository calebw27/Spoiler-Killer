<div class="filter-bar">
  <form method="post">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
              #Hashtags
            </a>
          </h4>
        </div>
        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
          <div class="panel-body">
            <ul class="filter-list">
              <% @hashtag_frequency.first(20).each do |hashtag| %>
                <li>
                  <button type="submit" name="hashtag_filter" class="btn btn-xs btn-<%= session[:filters][:hashtags].include?(hashtag[0]) ? "success" : "default" %>" value="<%= hashtag[0] %>">
                    <%= hashtag[0] %> - <%= hashtag[1] %>
                  </button>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingTwo">
          <h4 class="panel-title">
            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
              @Mentions
            </a>
          </h4>
        </div>
        <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
          <div class="panel-body">
            <ul class="filter-list">
              <% @mention_frequency.first(20).each do |mention| %>
                <li>
                  <button type="submit" name="mention_filter" class="btn btn-xs btn-<%= session[:filters][:mentions].include?(mention[0]) ? "success" : "default" %>" value="<%= mention[0] %>">
                    <%= mention[0] %> - <%= mention[1] %>
                  </button>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingThree">
          <h4 class="panel-title">
            <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
              Users
            </a>
          </h4>
        </div>
        <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
          <div class="panel-body">
            <ul class="filter-list">
              <% @user_frequency.first(20).each do |user| %>
                <li>
                  <button type="submit" name="user_filter" class="btn btn-xs btn-<%= session[:filters][:users].include?(user[0]) ? "success" : "default" %>" value="<%= user[0] %>">
                    <%= user[0] %> - <%= user[1] %>
                  </button>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-3 side-bar">
      <div class="filter-box">
        <h5 class="filter-box-title">Active Filters</h5>
        Hashtags:
        <% session[:filters][:hashtags].each do |hashtag| %>
          <div class="btn btn-xs btn-success"><%= hashtag %></div>
        <% end %>
        Mentions:
        <% session[:filters][:mentions].each do |mention| %>
          <div class="btn btn-xs btn-success"><%= mention %></div>
        <% end %>
        Users:
        <% session[:filters][:users].each do |user| %>
          <div class="btn btn-xs btn-success"><%= user %></div>
        <% end %>
        Content:
        <% session[:filters][:content].each do |content| %>
          <div class="btn btn-xs btn-success"><%= content %></div>
        <% end %>
        <form method="post">
          <button type="submit" name="reset_filters" class="btn btn-danger btn-xs" value="reset_filters">Reset Filters</button>
        </form>
      </div>
      <div class="filter-box">
        <form method="post">
          Content filter:</br>
          <input type="text" name="content_filter" width="250px" height="75px"><br />
          <input type="submit" value="Submit">
        </form>
      </div>
    </div><!-- ./col-sm-3 side-bar -->

    <div class="col-sm-9">
      <div class="content">
        <% @home_timeline.each do |tweet| %>
        <div class="media">
          <div class="media-left">
            <a href="#">
              <img class="media-object" src="<%= tweet.user.profile_image_uri %>">
            </a>
          </div> <!-- ./media-left -->

          <div class="media-body">
            <a class="media-heading" href="http://www.twitter.com/<%= tweet.user.screen_name %>" target="_blank">@<%= tweet.user.screen_name %></a>
            <div class="pull-right tweet-button-text">
              <span class="date-time"><%= tweet.created_at.strftime("%Y-%m-%d") %></span>
              <span class="date-time"><%= tweet.created_at.strftime("%H:%M") %></span>
            </div> <!-- ./pull-right tweet-button-text" -->

            <div class="tweet-spacing <%= "redacted" if redacted?(tweet) %>"> 
              <p><%= tweet.text %></p>
              <a href="#" class="btn btn-default btn-xs">Reply</a>
              <a href="#" class="btn btn-default btn-xs">Retweet</a>
              <a href="#" class="btn btn-default btn-xs">Star</a>
              <a href="#" class="btn btn-default btn-xs">Follow</a>
            </div><!-- ./tweet-spacing -->
          </div> <!-- ./media-body -->
        </div> <!-- ./media -->
        <hr>
        <% end %>
    </div><!-- ./col-sm-9 -->
